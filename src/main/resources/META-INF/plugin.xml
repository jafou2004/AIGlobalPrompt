<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jafou2004.aiglobalprompt</id>
    <name>AIGlobalPrompt</name>
    <vendor>jafou2004</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.ml.llm</depends>

    <resource-bundle>messages.AIGlobalPromptBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="intellij.aiglobalprompt.startup.PromptSyncProjectActivity"/>
        <applicationService serviceImplementation="intellij.aiglobalprompt.settings.GlobalSettingsState"/>
        <projectService serviceImplementation="intellij.aiglobalprompt.settings.ProjectSettingsState"/>
        <projectConfigurable
            parentId="tools"
            instance="intellij.aiglobalprompt.settings.GlobalSettingsConfigurable"
            id="intellij.aiglobalprompt.settings.GlobalSettingsConfigurable"
            key="settings.global.displayName"
            bundle="messages.AIGlobalPromptBundle"/>
    </extensions>
</idea-plugin>
